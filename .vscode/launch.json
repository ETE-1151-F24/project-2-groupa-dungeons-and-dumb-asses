//-----------------------------------------------
//configuration for using google test
//-----------------------------------------------
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Google Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/run_tests", // Path to the test executable
      "args": [], // Add specific Google Test arguments or leave empty
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}", // Set to your project root
      "environment": [],
      "externalConsole": true, // Use an external console for input/output
      "MIMode": "gdb", // Debugger mode, adjust to your setup
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // Path to GDB debugger, adjust if necessary
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build Google Test", // Corresponds to the task in tasks.json
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
